<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@leaderboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="its.LeaderboardController">
    <TableView fx:id="leaderboardTable" prefWidth="401.0">
        <columns>
            <TableColumn fx:id="usernameColumn" prefWidth="200" text="Username" />
            <TableColumn fx:id="highscoreColumn" prefWidth="200" text="High Score" />
        </columns>
    </TableView>
    <Button onAction="#Exit" prefHeight="40.0" prefWidth="80.0" text="Exit" />
</VBox>
